{
    "compilerOptions": {
        "lib": ["es2020", "es2019.array"],
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "types": [ "node", "jest" ],
        "removeComments": true,
        "incremental": true,
        "strictNullChecks": true,
        "listEmittedFiles": false,
        "diagnostics": false,
        "downlevelIteration": true,
        "tsBuildInfoFile": "private/tsbuild.info.json",
        "declaration": true,
        "declarationDir": "dts",
        "outDir": "dts",
        "noEmit": true,
        "resolveJsonModule": false,
    },
    "files": [
        "src/cli.ts",
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "src/bundle/*",
        "tests/*",
        "private/*"
    ]
}